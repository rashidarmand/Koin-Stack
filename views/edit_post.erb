<h1 class="center-align"><span class="green-letter">E</span>dit <span class="green-letter">P</span>ost</h1>

<div class="row black white-text">
  <p>
    <h3 class="center-align">Edit Post</h3>
  </p>
  <form action="/edit_post/<%= @post.id %>" method="post">
    <div class="col s12">
      <input class="active" type="text" name="title" id="title" placeholder="Title" value="<%= @post.title %>">
    </div>
    <div class="col s12 input-field">
      <textarea class="materialize-textarea active" type="text" name="content" id="password" placeholder="Content" cols="30" rows="30" required><%= @post.content %></textarea>
    </div>
    <p class="center-align">
      <button type="submit" class="waves-effect waves-light btn"><i class="material-icons right">check</i>Confirm</button>
    </p>
  </form>
</div>